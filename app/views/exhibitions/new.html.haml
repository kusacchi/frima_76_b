= render 'devise/shared/header'

.sell
  %main.sell__head
  .sell__main
    .sell__main__content
      %h2.sell__main__content__head
        商品の情報を入力
      = form_with model: @exhibition, url: exhibitions_path, id: 'new_exhibition', class: 'new_exhibition', local: true do |f|
        .sell__main__content__file
          .sell__main__content__file__up
            %h3.sell__main__content__file__up__head
              出品画像
              %span.form-require
                必須
              %p.sell__main__content__file__up__head__explanation
                最大5枚までアップロードできます
            .sell__main__content__file__up__box
              = f.fields_for :images do |i|
                = i.label :image, "aaaaa", class: "sell__main__content__file__up__box__file" do
                  = i.file_field :image, multiple: true, type: 'file', value:"", class: "sell__main__content__file__up__box__file__image", style: "display: none;"

              = f.fields_for :images do |i|
                = i.label :image, class: "sell__main__content__file__up__box__file" do
                  = i.file_field :image, multiple: true, type: 'file', value:"", class: "sell__main__content__file__up__box__file__image", style: "display: none;"

              = f.fields_for :images do |i|
                = i.label :image, class: "sell__main__content__file__up__box__file" do
                  = i.file_field :image, multiple: true, type: 'file', value:"", class: "sell__main__content__file__up__box__file__image", style: "display: none;"

              = f.fields_for :images do |i|
                = i.label :image, class: "sell__main__content__file__up__box__file" do
                  = i.file_field :image, multiple: true, type: 'file', value:"", class: "sell__main__content__file__up__box__file__image", style: "display: none;"
                  
              = f.fields_for :images do |i|
                = i.label :image, class: "sell__main__content__file__up__box__file" do
                  = i.file_field :image, multiple: true, type: 'file', value:"", class: "sell__main__content__file__up__box__file__image", style: "display: none;"

                %pre.sell__main__content__file__up__box__inner
        .sell__main__content__form
          %label
            商品
            %span.form-require
              必須
            = f.text_field :name, class: "sell__main__content__form__input", :placeholder => "商品名（必須 40文字まで)"
            
          %label
            商品の説明
            %span.form-require
              必須
          = f.text_area :explanatory,class: "sell__main__content__form__input", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2019年9月頃に1万円で購入したカーディガンです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
          
        .sell__main__content__form
          %h3.sell__main__content__form__sub
            商品の詳細
          .sell__main__content__form__box
            .sell__main__content__form__box__group
              %label
                カテゴリ
                %span.form-require
                  必須
              .sell__main__content__form__box__group__select
                = f.select :category_id, {"レディース":1, "メンズ":2,"ベビー・キッズ":3,"インテリア・住まい・小物":4,"本・音楽・ゲーム":5,"おもちゃ・ホビー・グッズ":6,"コスメ・香水・美容":7,"家電・スマホ・カメラ":8,"スポーツ・レジャー":9,"ハンドメイド":10,"チケット":11,"自動車・オートバイ":12,"レディース":13},{:include_blank =>"---"}, class: "sell__main__content__form__box__group__select__form"
        
              %label
                ブランド
                %span.form-any
                  任意
              .sell__main__content__form__box__group__select
                = f.text_field :brand_id, class: "sell__main__content__form__box__group__select__brand", placeholder: "例）シャネル" 
                
              %label
                商品の状態
                %span.form-require
                  必須
              .sell__main__content__form__box__group__select
                = f.select :status, {"新品、未使用":1, "未使用に近い":2,"目立った傷や汚れなし":3,"やや傷や汚れあり":4,"傷や汚れあり":5,"全体的に状態が悪い":6},{:include_blank =>"---"}, class: "sell__main__content__form__box__group__select__form"
                
        .sell__main__content__form
          %h3.sell__main__content__form__sub
            配送について
          .sell__main__content__form__box
            .sell__main__content__form__box__group
              %label
                配送料の負担
                %span.form-require
                  必須
              .sell__main__content__form__box__group__select
                = f.select :cost, {"送料込み(出品者負担)":1, "着払い(購入者負担)":2},{:include_blank =>"---"}, class: "sell__main__content__form__box__group__select__form"

              %label
                発送元の地域
                %span.form-require
                  必須
              .sell__main__content__form__box__group__select
                =f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name
              %label
                発送までの日数
                %span.form-require
                  必須
              .sell__main__content__form__box__group__select
                = f.select :day, {"1~2日で発送":1, "2~3日で発送":2, "4~7日で発送":3},{:include_blank =>"---"}, class: "sell__main__content__form__box__group__select__form"
        .sell__main__content__form
          %h3.sell__main__content__form__sub
            販売価格(300〜9,999,999)
          .sell__main__content__form__box
            %ul.sell__main__content__form__box__price
              %li.sell__main__content__form__box__price__top
                .sell__main__content__form__box__price__top__left
                  価格
                  %span.form-require
                    必須
                .sell__main__content__form__box__price__top__right
                  ¥
                  = f.text_field :price, class: "sell__main__content__form__box__price__top__right__input", placeholder: "例）300"
        .sell__main__content__button
          %div
            %p
              = link_to "", target: "_blank" do
                出品が禁止されている商品
              \/
              = link_to "", target: "_blank" do
                行為
              を必ずご確認ください。
            %p
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              = link_to "", target: "_blank" do
                偽ブランドの販売
              は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              = link_to "", target: "_blank" do
                加盟店規約
              に同意したことになります。
            = f.submit "出品する", class: "sell__main__content__button__red"
         
  %main.sell__footer

= render 'devise/shared/footer'